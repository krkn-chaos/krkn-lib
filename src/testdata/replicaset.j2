apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: {{name}}
  namespace: {{namespace}}
spec:
  replicas: 1
  selector:
    matchLabels:
      name: pause 
  template:
    metadata:
      name: {{name}}
      labels:
        name: pause
    spec:
      containers:
        - name: pause
          image: gcr.io/google-containers/pause-amd64:3.0
